<h1>Confirm schedule</h1>

<%= form_for(@schedule, url: schedule_wizard_step_path(id: :confirm), method: :put) do |f| %>
  <dl class="dl-horizontal">
    <dt><%= f.label :scheduled_on %></dt>
    <dd><%= f.object.scheduled_on %></dd>
    <dt><%= f.label :description %></dt>
    <dd><%= hbr f.object.description %></dd>
    <dt><%= f.label :users %></dt>
    <dd>
      <% f.object.users.each do |user| %>
        <%= user.username %><br />
      <% end %>
    </dd>
  </dl>
  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>

<%= link_to 'Back', previous_wizard_path %>
