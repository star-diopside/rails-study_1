<h1>Confirm schedule</h1>

<%= form_for(@schedule, url: schedule_wizard_step_path(id: :confirm), method: :put) do |f| %>
  <p>
    <strong>Scheduled on:</strong>
    <%= @schedule.scheduled_on %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= hbr @schedule.description %>
  </p>
  <p>
    <strong>Users:</strong>
    <% @schedule.users.each do |user| %>
      <%= user.username %>
    <% end %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', previous_wizard_path %>
